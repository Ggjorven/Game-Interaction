<UserControl x:Class="GameInteraction.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             >
    <Grid>
        <!-- Root Grid acts as a container for stacking elements -->
        <Grid>
            <!-- Base Canvas for rendering/drawing -->
            <Canvas x:Name="GameCanvas" Background="Black" />

            <!-- UI Grid overlayed on top of the Canvas -->
            <Grid x:Name="UiOverlay">
                <!-- Centered Title -->
                <TextBlock Text="MAIN MENU"
                       FontSize="64"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" />

                <!-- Top-Right Corner Text -->
                <TextBlock Text="Version 1.0"
                       FontSize="20"
                       Foreground="LightGray"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="20" />

                <!-- Bottom-Right Corner Text -->
                <TextBlock Text="© 2025 YourGameStudio"
                       FontSize="16"
                       Foreground="Gray"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Bottom"
                       Margin="20" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
